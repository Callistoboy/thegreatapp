<%= form_for(:session, url: login_path) do |form| %>
  <div>
    <%= flash[:danger] %>
  </div>
  <div class="form-group">
    <%= form.label(:email, t('views.users.email')) %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label(:password, t('views.users.password')) %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <div>
    <%= form.submit(t('global.header.sign_in'), class: "btn btn-primary") %>
    <%= link_to t('global.header.sign_up'), new_user_path, class: "btn btn-link" %>
  </div>
<% end %>